<VirtualHost *:80>
  ServerAdmin <%= node[:reprepro][:pgp][:email] %>
  ServerName <%= node[:reprepro][:fqdn] %>

  DocumentRoot <%= @repo_dir %>
  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  <Directory "<%= @repo_dir %>">
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>

  <DirectoryMatch "<%= @repo_dir %>/(db|conf)">
    Order allow,deny
    Deny from all
    Satisfy all
  </DirectoryMatch>

  LogLevel warn
  ErrorLog /var/log/apache2/apt_repo-error.log 
  CustomLog /var/log/apache2/apt_repo-access.log combined
  ServerSignature On
</VirtualHost>
